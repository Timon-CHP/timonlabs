<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scrollview"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical" >

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/hello" />

        <LinearLayout
            android:id="@+id/linearLayout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <EditText
                android:id="@+id/edname"
                android:layout_width="86dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.34" />

            <Button
                android:id="@+id/btnchange"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="clickMe"
                android:text="Button" />

            <TextView
                android:id="@+id/txthello"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="รก"
                android:textAppearance="?android:attr/textAppearanceLarge" />
        </LinearLayout>

        <Button
            android:id="@+id/btn_load_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="clickMe"
            android:text="Load layout XML from XMLPullParser" />

        <Button
            android:id="@+id/btn_open_inputeditor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="clickMe"
            android:text="@string/openinputeditors" />

        <Button
            android:id="@+id/btn_open_fingerpaint"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:linksClickable="true"
            android:onClick="clickMe"
            android:text="Finger Paint" />

        <Button
            android:id="@+id/btn_open_photogrid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="clickMe"
            android:text="Photo Grid" />

        <Button
            android:id="@+id/btn_open_testfont"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="clickMe"
            android:text="Test Font" />

        <Button
            android:id="@+id/btn_open_drawablebreak"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="clickMe"
            android:text="Drawable break from XML alias" />

        <Button
            android:id="@+id/btn_open_animation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="clickMe"
            android:text="Animation show" />

    </LinearLayout>

</ScrollView>
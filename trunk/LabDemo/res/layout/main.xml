<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scrollview"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical" >

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/hello" />

        <Button
            android:id="@+id/btn_load_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="clickMe"
            android:text="Load layout XML from XMLPullParser" />

        <Button
            android:id="@+id/btn_open_inputeditor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="clickMe"
            android:text="@string/openinputeditors" />

        <Button
            android:id="@+id/btn_open_fingerpaint"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:linksClickable="true"
            android:onClick="clickMe"
            android:text="Finger Paint" />

        <Button
            android:id="@+id/btn_open_photogrid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="clickMe"
            android:text="Photo Grid" />

        <Button
            android:id="@+id/btn_open_testfont"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="clickMe"
            android:text="Test Font" />

        <Button
            android:id="@+id/btn_open_drawablebreak"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="clickMe"
            android:text="Drawable break from XML alias" />

        <Button
            android:id="@+id/btn_open_animation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="clickMe"
            android:text="Animation show" />

        <Button
            android:id="@+id/btn_open_sharebutton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="clickMe"
            android:text="SocialAuth - Share Button" />

        <Button
            android:id="@+id/btn_open_sharebar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="clickMe"
            android:text="SocialAuth - Share Bar" />

        <Button
            android:id="@+id/btn_open_sharecustom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="clickMe"
            android:text="SocialAuth - Share Button" />
        <Button
            android:id="@+id/btn_open_usbdevice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="clickMe"
            android:text="See USB connect" />
    </LinearLayout>

</ScrollView>